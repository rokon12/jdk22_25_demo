<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.example</groupId>
    <artifactId>jdk22-25-demo</artifactId>
    <version>1.0-SNAPSHOT</version>
    <properties>
        <!-- Ensure you run Maven with a JDK 25 EA build (JAVA_HOME) -->
        <maven.compiler.release>25</maven.compiler.release>
        <maven.compiler.showWarnings>true</maven.compiler.showWarnings>
        <exec.plugin.version>3.1.0</exec.plugin.version>
        <shade.plugin.version>3.5.0</shade.plugin.version>
    </properties>

    <build>
        <plugins>
            <!-- Compile with preview features enabled -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>${maven.compiler.release}</release>
                    <compilerArgs>
                        <arg>--enable-preview</arg>
                    </compilerArgs>
                </configuration>
            </plugin>

            <!-- Build an executable (shaded) JAR with Main-Class manifest -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>${shade.plugin.version}</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals><goal>shade</goal></goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>ca.bazlur.Main</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${exec.plugin.version}</version>
                <configuration>
                    <mainClass>ca.bazlur.Main</mainClass>
                    <cleanupDaemonThreads>false</cleanupDaemonThreads>
                    <arguments></arguments>
                    <systemProperties>
                        <enable-preview/>
                    </systemProperties>
                    <environmentVariables>
                        <JAVA_TOOL_OPTIONS>--enable-preview --enable-native-access=ALL-UNNAMED</JAVA_TOOL_OPTIONS>
                    </environmentVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
